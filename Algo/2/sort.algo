FUNCTION inser_sort(tab: ARRAY_OF INTEGER) : ARRAY_OF INTEGER
VAR
    r_tab :ARRAY_OF INTEGER ;
    n,i,j,k :INTEGER;
BEGIN
    n:= tab.length;
    FOR i FROM 1 TO n-2 STEP 1  DO
        k:= tab[i] ;
        j:= i-1 ;
        WHILE (j>=0 and tab[j]>k) DO
            tab[j+1] := tab[j] ;
            j:=j-1;
        END_WHILE
        tab[j+1]:= k ;
    END_FOR
    r_tab:=tab ;
    RETURN r_tab ;
END

